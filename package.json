{
  "name": "@uscreen.de/npg",
  "type": "module",
  "version": "0.5.2",
  "private": true,
  "packageManager": "pnpm@10.17.0+sha512.fce8a3dd29a4ed2ec566fb53efbb04d8c44a0f05bc6f24a73046910fb9c3ce7afa35a0980500668fa3573345bd644644fa98338fa168235c80f4aa17aa17fbef",
  "description": "Node Package Guard",
  "author": "spiegel@uscreen.de",
  "license": "AGPL-3.0-only",

  "main": "app/server.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "nodemon",
    "test": "node --test --test-reporter spec",
    "test:cov": "c8 --reporter=html --reporter=text --reporter=json-summary --reporter=lcov node --test",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "@fastify/http-proxy": "^11.3.0",
    "@fastify/one-line-logger": "^2.0.0",
    "@uscreen.de/common-esm": "^1.0.0",
    "@uscreen.de/fastify-app": "^3.0.0",
    "env-schema": "^6.0.0",
    "fastify": "^5.0.0",
    "fastify-plugin": "^5.0.0",
    "ioredis": "^5.7.0",
    "lru-cache": "^11.2.1",
    "semver": "^7.7.2",
    "undici": "^7.16.0",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.4.1",
    "@uscreen.de/dev-service": "^0.12.12",
    "c8": "^10.0.0",
    "eslint": "^9.36.0",
    "nodemon": "^3.0.0"
  },
  "services": [
    {
      "image": "docker.dragonflydb.io/dragonflydb/dragonfly",
      "ports": [
        "6379:6379"
      ],
      "cpus": 1,
      "mem_limit": "2048m",
      "mem_reservation": "512m",
      "ulimits": {
        "memlock": "-1"
      }
    }
  ]
}
