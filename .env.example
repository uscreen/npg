# @see ./app/config.js for defaults and options

LOG_LEVEL=debug

# Server Configuration
# HTTP_PORT=3000
# HTTP_BIND=0.0.0.0

# Registry Configuration
# REGISTRY_URL=https://registry.npmjs.org
# REGISTRY_POLL_URL=https://replicate.npmjs.com/registry
# PROXY_URL=http://127.0.0.1:3000/npm

# Storage Configuration
# STORAGE_DIR=../var/storage
# BLACKLIST_PATH=../etc/blacklist.yml
# MALWARE_LIST_DIR=../var/malware-list

# Malware Database Configuration
# UPDATE_INTERVAL=1800000  # 30 minutes in milliseconds
# ENABLE_SCHEDULED_UPDATES=true
# ALLOW_REMOTE_FETCH=true

# Redis/DragonflyDB Configuration (optional - falls back to filesystem cache)
# ENABLE_REDIS_CACHE=true
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=your-password
# REDIS_DB=0

# NPM Changes Polling Configuration
# ENABLE_NPM_CHANGES_POLLER=true
# NPM_CHANGES_POLL_INTERVAL=5000
# NPM_CHANGES_BATCH_SIZE=500

